<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.springwithfx.controller.ThongKeController">
    <ImageView fitHeight="212.0" fitWidth="530.0">
        <Image url="@/com/example/springwithfx/images/logo.png" />
    </ImageView>

    <!-- Đặt tiêu đề ứng dụng -->
    <Label text="Ứng Dụng Quản Lý Thu Chi">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <!-- Tạo một nút với màu nền và màu chữ đẹp -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#switchThongKe" prefHeight="26.0" prefWidth="270.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Thống kê chi tiết" />
    </HBox>


    <!-- Thêm các nhãn với font-size và font-weight đẹp -->
    <Label style="-fx-font-size: 12;" text="Số Tiền Còn Lại:" />
    <Label fx:id="totalLabel" prefHeight="26.0" prefWidth="376.0" style="-fx-font-size: 16; -fx-font-weight: bold;" />
</VBox>
