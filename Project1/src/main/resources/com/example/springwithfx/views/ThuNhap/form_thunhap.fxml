<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.springwithfx.controller.ThuNhapController">
    <VBox spacing="20" alignment="CENTER">
        <Label text="Thêm Thu Nhập" style="-fx-font-size: 24; -fx-font-weight: bold;" />

        <HBox alignment="CENTER" spacing="10">
            <Label text="Tên Thu Nhập:" style="-fx-font-size: 18;" />
            <TextField fx:id="incomeTypeField" promptText="Nhập tên thu nhập" prefWidth="300" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Ngày:" style="-fx-font-size: 18;" />
            <DatePicker fx:id="incomeDatePicker" prefWidth="200" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Số tiền:" style="-fx-font-size: 18;" />
            <TextField fx:id="incomeAmountField" promptText="Nhập số tiền" prefWidth="300" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Ghi chú:" style="-fx-font-size: 18;" />
            <TextField fx:id="incomeNoteField" promptText="Nhập ghi chú" prefWidth="300" />
        </HBox>

        <Button onAction="#addIncome" text="Thêm" style="-fx-font-size: 18;" />
    </VBox>
</StackPane>
