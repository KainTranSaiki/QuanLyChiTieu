<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.springwithfx.controller.ChiTieuController">
    <VBox spacing="20" alignment="CENTER">
        <Label text="Thêm Chi Tiêu" style="-fx-font-size: 24; -fx-font-weight: bold;" />

        <HBox alignment="CENTER" spacing="10">
            <Label text="Loại Chi Tiêu:" style="-fx-font-size: 18;" />
            <TextField fx:id="expenseNameField" promptText="Nhập loại chi tiêu" prefWidth="300" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Ngày:" style="-fx-font-size: 18;" />
            <DatePicker fx:id="expenseDatePicker" prefWidth="200" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Giá:" style="-fx-font-size: 18;" />
            <TextField fx:id="expenseAmountField" promptText="Nhập giá" prefWidth="300" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Mặt Hàng:" style="-fx-font-size: 18;" />
            <TextField fx:id="expenseCategoryField" promptText="Nhập mặt hàng" prefWidth="300" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Ghi Chú:" style="-fx-font-size: 18;" />
            <TextField fx:id="ghiChuField" promptText="Nhập ghi chú" prefWidth="300"/>
        </HBox>

        <Button onAction="#addExpense" text="Thêm" style="-fx-font-size: 18;" />
    </VBox>
</StackPane>
